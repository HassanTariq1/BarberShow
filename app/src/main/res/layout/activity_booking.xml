<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_booking"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.mirza.barbershop.Booking">

    <TextView
        android:text="Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="11dp"
        android:id="@+id/name"
        android:layout_alignEnd="@+id/address"
        android:layout_alignStart="@+id/address" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_marginStart="11dp"
        android:id="@+id/name1"
        android:layout_alignTop="@+id/name"
        android:layout_toEndOf="@+id/address" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="time"
        android:ems="10"
        android:id="@+id/time1"
        android:layout_below="@+id/phone1"
        android:layout_alignStart="@+id/phone1"
        android:layout_marginTop="12dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/date1"
        android:layout_alignBaseline="@+id/date"
        android:layout_alignBottom="@+id/date"
        android:layout_alignStart="@+id/time1" />

    <TextView
        android:text="Time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/time"
        android:layout_alignBaseline="@+id/time1"
        android:layout_alignBottom="@+id/time1"
        android:layout_alignStart="@+id/phone" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPostalAddress"
        android:ems="10"
        android:id="@+id/address1"
        android:layout_alignBaseline="@+id/address"
        android:layout_alignBottom="@+id/address"
        android:layout_alignStart="@+id/name1" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/phone1"
        android:layout_alignBottom="@+id/phone"
        android:layout_alignStart="@+id/address1" />

    <TextView
        android:text="Phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/phone"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/address1"
        android:layout_alignStart="@+id/address" />

    <TextView
        android:text="Date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/date"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/time1"
        android:layout_alignEnd="@+id/time" />

    <TextView
        android:text="Address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/address"
        android:layout_marginStart="16dp"
        android:layout_below="@+id/name1"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Style Type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/date1"
        android:layout_alignStart="@+id/date"
        android:layout_marginTop="21dp"
        android:id="@+id/style" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/style1"
        android:layout_alignBaseline="@+id/style"
        android:layout_alignBottom="@+id/style"
        android:layout_toEndOf="@+id/style" />

    <TextView
        android:text="Type No"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/style1"
        android:layout_alignStart="@+id/style"
        android:layout_marginTop="18dp"
        android:id="@+id/tno" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/tno1"
        android:layout_alignBaseline="@+id/tno"
        android:layout_alignBottom="@+id/tno"
        android:layout_alignStart="@+id/style1" />

    <Button
        android:text="Confirm Booking"
 android:background="@color/colorPrimaryDark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:id="@+id/cb"
        android:elevation="0dp"
        android:textColorLink="@color/colorPrimaryDark"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/tno1"
        android:layout_marginStart="15dp" />

</RelativeLayout>
